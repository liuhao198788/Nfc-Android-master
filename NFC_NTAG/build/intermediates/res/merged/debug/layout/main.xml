<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="@color/myellow"
        android:textSize="22sp"
        android:text="@string/nfc_title"
        />

    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="22sp"
        android:text="Result"
        />

    <EditText
        android:id="@+id/noteRead"
        android:layout_width="match_parent"
        android:layout_height="388dp"
        android:background="@drawable/shape_msg"
        android:textColor="@color/colorAccent"
        android:inputType="textMultiLine"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >
        <!--<requestFocus />-->
    </EditText>

    <LinearLayout
        android:id="@+id/llWrite"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_margin="20dp"
        android:orientation="horizontal"
        android:visibility="gone"
        >
        
        <EditText
            android:id="@+id/etWrite"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="Please input the data"
            android:background="@drawable/shape_msg"
            />

        <Button
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/shape_button"
            android:textColor="@color/white"
            android:text="Write NTAG"
            android:onClick="OnClickWriteNTAG"
            />
    </LinearLayout>

</LinearLayout>